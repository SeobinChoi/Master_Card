generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  GUEST
  BUYER
  SELLER
  ADMIN
}

enum CardType {
  GUIDE
  MANUAL
  TIP
  CHECKLIST
  TEMPLATE
  CODE_SNIPPET
  DESIGN_ASSET
  PLANNING_DOC
}

enum CardStatus {
  DRAFT
  PUBLISHED
}

enum LicenseType {
  PERSONAL
  COMMERCIAL
  TEAM_INTERNAL
  FULL_USE_NO_REDISTRIBUTION
}

model User {
  id                String          @id @default(cuid())
  email             String          @unique
  name              String
  emailVerified     DateTime?
  image             String?
  role              UserRole        @default(BUYER)
  sellerApproved    Boolean         @default(false)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  accounts          Account[]
  sessions          Session[]
  cardsCreated      Card[]          @relation("SellerCards")
  purchases         Purchase[]
  reviews           Review[]
  certifications    Certification[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Card {
  id              String       @id @default(cuid())
  sellerId        String
  title           String
  summary         String
  markdownContent String
  category        String
  type            CardType
  licenseType     LicenseType
  version         Int          @default(1)
  status          CardStatus   @default(DRAFT)
  price           Decimal      @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  seller          User            @relation("SellerCards", fields: [sellerId], references: [id])
  attachments     Attachment[]
  reviews         Review[]
  certifications  Certification[]
  purchases       Purchase[]
  updates         CardUpdate[]

  @@map("cards")
}

model Attachment {
  id        String   @id @default(cuid())
  cardId    String
  fileName  String
  fileUrl   String
  fileType  String
  fileSize  Int
  createdAt DateTime @default(now())

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

model Purchase {
  id          String   @id @default(cuid())
  userId      String
  cardId      String
  price       Decimal  @default(0)
  purchasedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId])
  @@map("purchases")
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  rating    Int
  title     String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@map("reviews")
}

model Certification {
  id              String   @id @default(cuid())
  userId          String
  cardId          String
  problemSolved   String
  howUsed         String
  result          String
  proofImages     String[]
  proofLinks      String[]
  verified        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model CardUpdate {
  id          String   @id @default(cuid())
  cardId      String
  version     Int
  title       String
  content     String
  createdAt   DateTime @default(now())

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@map("card_updates")
}
